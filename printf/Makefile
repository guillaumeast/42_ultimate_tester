NAME			:= ultimate_tester_printf
CC				:= cc
CFLAGS			:= -Wno-deprecated-non-prototype

# Framework paths (TMP: auto-generated by script in prod)
ULT_DIR			:= /Users/gui/repos/42_ultimate_tester
SRC_DIR			:= $(ULT_DIR)/framework/srcs
INC_DIR			:= $(ULT_DIR)/framework/includes
UNITS_DIR		:= $(ULT_DIR)/printf

# Project paths (TMP: auto-generated by script in prod)
PRINTF_DIR		:= /Users/gui/repos/printf
PRINTF_LIB		:= $(PRINTF_DIR)/libftprintf.a
PRINTF_INC_DIR	:= $(PRINTF_DIR)/includes

SRCS			:= $(wildcard $(SRC_DIR)/*c) $(wildcard $(UNITS_DIR)/*.c)
INCLUDES		:= -I$(INC_DIR) -I$(PRINTF_INC_DIR)

OBJ_DIR			:= obj
OBJS			:= $(SRCS:%.c=$(OBJ_DIR)/%.o)

all: $(NAME)

$(PRINTF_LIB):
	@make -C $(PRINTF_DIR)

$(NAME): $(OBJS) $(PRINTF_LIB)
	$(CC) $(CFLAGS) $(INCLUDES) -o $(NAME) $(OBJS) $(PRINTF_LIB)

$(OBJ_DIR)/%.o : %.c
	@mkdir -p $(dir $@)
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	@rm -rf $(OBJ_DIR)

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re run
